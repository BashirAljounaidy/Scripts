# Common DevOps Aliases
alias rmall='rm -rf .'  # Show git status
alias h='history'  # Short alias for history
alias os='uname -a'  # Show operating system information
alias ll='ls -alF'  # List files in long format
alias ..='cd ..'   # Go up one directory
alias ...='cd ../..'  # Go up two directories
alias cls='clear'  # Clear the terminal screen
alias myip='curl ipinfo.io'  # Get public IP address information
# Docker Aliases

# Git Aliases
alias gall='gall_func'
gall_func() {
  git add .
  git commit -m "$1"
  git push
}
# Docker-Compose Aliases
alias dcu='docker-compose up -d'  # Start all services defined in docker-compose.yml
alias dcd='docker-compose down'  # Stop and remove all containers defined in docker-compose.yml

# Misc Aliases
alias weather='curl wttr.in'  # Get the weather forecast
##Remove ALL 
#!/usr/bin/env bash

# Function to remove all directories and files with confirmation prompt
alias rmall='remove_all_with_confirmation'
remove_all_with_confirmation() {
    # Check if the current working directory is the user's home directory
    if test $(pwd) = $HOME; then
    echo "You are in your home directory. Delete Aborted."
    exit 1
    else
    echo -n "Are you sure you want to delete all directories and files? (y/n): "
    read answer
    fi
    if [[ "$answer" == "n" || "$answer" == "N" ]]; then
        echo "Deletion aborted."
    elif [[ "$answer" == "y" || "$answer" == "Y" ]]; then
        find "$1" -mindepth 1 -delete
        echo "All directories and files have been deleted."
    else
        echo "Invalid input. Please enter 'y' to delete or 'n' to abort."
    fi
}
alias myname='echo "My name is $USER"'  # Show the current user's username

#exports for containers
export mongodb="$HOME/Scripts/containers/mongod.yml"
alias docker-clean='docker rm -f  && docker rmi -f  && docker volume rm  && docker network rm '
